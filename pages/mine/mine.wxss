/* pages/mine/mine.wxss */
page{
  background-color: #f2f2f2;
}
.info{
  width: 100%;
  height: 140px;
  background-color: #014d2f;
  display: flex;
  flex-direction: row;
}
.avatar{
  margin-left: 18px;
  margin-top: 35.5px;
  width: 70px;
  height: 70px;
  border-radius: 50%;
}
.container_column, .money_item, .order_item{
  display: flex;
  flex-direction: column;
}
.container_row, .money_container, .order_container{
  display: flex;
  flex-direction: row;
}
.nickname, .grade_container{
   margin-left: 25px;
}

.nickname {
  margin-top: 41.5px;
  font-size: 20;
	color: #ffffff;
}
.grade_container{
  width: 100px;
  height:24px;
  margin-top: 10px;
  border-radius: 12px;
  background-color: #ffffff;
  display: flex;
  align-items: center;
}
.grade_image{
  margin-left: 13px;
  width: 19px;
  height: 13.5px;
}
.grade{
  margin-left: 8px;
  font-size: 12px;
	color: #014d2f;
}

.money_container{
  height: 60px;
  background: #fff;
}
.money_item{
  flex:1;
  align-items: center;
  justify-content: center;
}
.divide_line{
  margin-top: 11px;
  width: 1px;
  height: 38px;
  background-color: #e6e6e6;
}
.money_item_value{
  font-size: 20.1px;
	color: #014d2f
}
.money_item_key{
  font-size: 13.1px;
	color: #808080;
}
.order{
  margin-top: 10px;
  background: #fff;
  height: 120px;
  display: flex;
  flex-direction: column;
}
.order_title{
  margin-top: 20px;
  margin-left: 15.5px;
  height: 25px;
  font-size: 15px;
	color: #333333;
  font-weight: bold;
}
.order_container{
  flex: 1;
}
.order_item{
  flex:1;
  align-items: center;
  justify-content: center;
}
.order_image{
  width: 26.5px;
  height: 21.5px;
}
.order_desc{
  margin-top: 5px;
  font-size: 13.1px;
	color: #333333;
  font-weight: bold;
}