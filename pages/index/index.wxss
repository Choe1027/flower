  flex-direction: row;
  height: 30px;
}
.title {
  margin-left:16px;
  width: 20%;
  height: 100%;
  font-size: 17px;
  font-weight: bolder;
  display: flex;
  align-items: center;
  color: #014D2F;
}
.title_en{
  width: 30%;
  height: 100%;
  font-size: 13px;
  color: #808080;
  display: flex;
  align-items: center;
}
.title_num {
  font-size: 14px;
  width: 50%;
