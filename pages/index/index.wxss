
.swiper {
  width: 100%;
  height: 200px;
}
.slide-image {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 0 auto;
}
.flex_row{
  display: flex;
  flex-direction: row;
}
.flex_column{
  display: flex;
  flex-direction: column;
}
.entrance_container {
  margin-top: 30px;
  width: 100%;
  height: 200px;
}
.entrance_child_container_row{
  width: 50%;
}
.entrance_child_container_column{
  height: 50%;
}
.entrance_title {
  color:#333333;
  font-size:13px;
}
.entrance_title1{
  color:#808080;
  font-size:12.5px;
  margin-top: 13.5px;
  margin-left:29px;
  font-variant:small-caps;
}
.entrance_title2 {
  margin-left:29px;
}
.entrance_title3 {
  margin-top:13px;
